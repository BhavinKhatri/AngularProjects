@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Decorator</h2>
<div ng-controller="HomeController" class="container">


    <div ng-show="loadingTracker.active()" class="BusyIndicator">
        <span>{{LoadingText}}</span>
    </div>
    <form id="form1" role="form" ng-model="Employee" ng-submit="CreateOrUpdateEmployee(Employee)">
        <h3>Create Employee</h3>
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name" value="" ng-model="Employee.Name" ng-required />
        </div>
        <div class="form-group">
            <label for="salary">Salary</label><input class="form-control" type="number" name="salary" id="salary" value="" ng-model="Employee.Salary" ng-required ng-model-options="{ updateOn: 'blur' }" />
        </div>
        <div class="form-group">
            <label for="age">Age</label><input class="form-control" type="number" name="age" id="age" value="" check-employee-age age="Employee.Age" ng-model="Employee.Age" ng-required ng-model-options="{ debounce: 1000 }" />
            <div ng-messages="form1.age.$error" ng-messages-include="/Views/Home/ErrorMessage.html"></div>
            <div ng-show="form1.age.$valid">Duplicate title.</div>
            <div ng-message="form1.age.$error">This field is required.</div>

        </div>
        <button type="submit" name="submit" class="btn btn-default">{{Action}}</button>
        <button ng-click="LogConsole()" name="submit" class="btn btn-default">Log</button>
        <button ng-click="toast()">Show Toast Message</button>
    </form>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="emps in Employees">
                    <td>
                        <input type="checkbox" ng-model="IsChecked" />
                    </td>
                    <td>
                        <a href="#" ng-click="SelectEmployee(emps)">{{emps.Id}}</a>
                    </td>
                    <td>
                        {{::emps.Name}}
                    </td>
                    <td>
                        {{emps.Age}}
                    </td>
                    <td>
                        {{emps.Salary}}
                    </td>
                    <td>
                        <a href="#" ng-click="DeleteEmployee(emps)" confirm-delete="Are you sure you want to delete this employee?">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    @*Button Call*@
    <button ng-click="callLog()">Call Log</button>
</div>



